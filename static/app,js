//new

async function refreshStatus() {
    const log = document.getElementById("statusText");
    log.innerText = "Refreshing...";
    try {
        const res = await fetch("/health");
        const data = await res.json();
        log.innerText = "Status: " + data.status + " (Build " + data.build_version + ")";
    } catch {
        log.innerText = "Error fetching health";
    }
}
